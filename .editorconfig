####################################################
# Purpose:
# This file defines and enforces consistent coding styles across different
# text editors and IDEs. It improves code readability, maintainability,
# and collaboration within teams by applying universal formatting rules.
####################################################


####################################################
# ROOT DECLARATION
####################################################
# Purpose:
# Identifies this file as the root EditorConfig configuration.
# No other .editorconfig files outside this folder will be applied.

root = true


####################################################
# JAVASCRIPT / TYPESCRIPT FILES
####################################################
# Purpose:
# Enforces consistent style in JavaScript and TypeScript source files.

[*.{js,jsx,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80


####################################################
# JSON & JSONC FILES
####################################################
# Purpose:
# Ensures consistent and compact formatting for JSON and JSONC (JSON with comments).

[*.{json,jsonc}]
indent_style = space
indent_size = 2
insert_final_newline = true


####################################################
# YAML / YML FILES
####################################################
# Purpose:
# Ensures consistent formatting for YAML configuration files.

[*.{yml,yaml}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true


####################################################
# MARKDOWN FILES
####################################################
# Purpose:
# Maintains formatting integrity for Markdown files, especially where
# trailing whitespace may affect rendering.

[*.md]
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true


####################################################
# HTML / CSS / SCSS FILES
####################################################
# Purpose:
# Ensures consistent indentation for frontend templating and styling files.

[*.{html,css,scss}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true


####################################################
# SHELL AND CONFIG FILES
####################################################
# Purpose:
# Keeps configuration and script files clean and consistent.

[*.{sh,bash,env}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true


####################################################
# PLAINTEXT & TEXT FILES
####################################################
# Purpose:
# Applies basic formatting rules for plain text files (README, LICENSE, etc.)

[*.{txt,text}]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
